{
  "compilerOptions": {
    "baseUrl": "./src",
    "jsx": "react-jsx",
    "paths": {
      "~assets/*": ["assets/*"],
      "~components/*": ["components/*"],
      "~screens/*": ["screens/*"],
      "~navigation/*": ["navigation/*"],
      "~recoil/*": ["recoil/*"],
      "~types/*": ["types/*"],
      "~utils/*": ["utils/*"]
    }
  },
  "extends": "expo/tsconfig.base",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "App.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}